<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".SearchFragment">
    <TextView
            android:text="找不到任何結果"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_unfound"
            android:textSize="20sp" android:visibility="visible"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="70dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:visibility="visible" android:layout_height="match_parent"
            android:id="@+id/rv_searchResult"/>
</FrameLayout>